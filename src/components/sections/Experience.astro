---
import Section from "../Section.astro";

import { work } from "cv.json";
// import { work } from "@cv_es";
---

<Section title="Experience">
  <ul>
    {
      work.map(({ name, startDate, endDate, position, summary }) => {
        const startYear = new Date(startDate).getFullYear();
        const endYear =
          endDate != null ? new Date(endDate).getFullYear() : "Actual";
        const years = `${startYear} - ${endYear}`;

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{name}</h3>
                  <h4>{position}</h4>
                </div>

                <time>{years}</time>
              </header>

              <footer>
                <p>{summary}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: var(--color-article-h3);
  }

  article h4 {
    color: var(--color-article-h4);
    font-weight: 400;
    font-style: italic;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: var(--color-time);
    font-size: 0.85rem;
  }

  p {
    color: var(--color-p);
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
