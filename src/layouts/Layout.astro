---
import { basics } from "@cv";
// import { basics } from "@cv_es";

interface Props {
  title: string;
}

const { title } = Astro.props;
const { image, summary, url } = basics;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={summary} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" as="image" href={image} />

    <meta property="og:url" content={url} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={summary} />
    <meta property="og:image" content="" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content={url.split("//")[1] ?? ""} />
    <meta property="twitter:url" content={url} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={summary} />
    <meta name="twitter:image" content="" />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: "Montserrat", "Open Sans", "Verdana", sans-serif;
    font-weight: 300;
    background: #fff;
    letter-spacing: -0.025rem;
  }

  body,
  figure {
    margin: 0;
    padding: 0;
  }
  a {
    text-decoration: none;
  }
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }
  /* 
  @media (prefers-color-scheme: dark) {
    html {
      --background-color: #000000;
      --text-color: #fff;
      background: var(--background-color);
      color: var(--text-color);
    }
  } */
  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    font-family: Montserrat, "Open Sans", "Verdana", sans-serif;
    font-weight: 700;
  }

  p {
    color: var(--color-article-p);
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
  }

  :root {
    --color-text: #444444;
    --bold-text: #222;
    --color-p: #000000;
    --code: #f2f2f2;
    --block-quote-border: #999;
    --block-quote-text: #222;
    --slider-bg: #dddddd;
    --slider-bg-before: #fff;
    --slider-input-bg: #8758ff;
  }

  [data-theme="light"] {
    background-color: #ffffff;
    --color-text: #444444;
    --color-h2: #444;
    --color-h4: #222;
    --color-footer-kbd-bg: #fdfdfd;
    --color-footer-hero: #777;
    --color-footer-hero-hover: #eee;
    --color-kbd-bg: #eee;
    --color-time: #555;
    --color-article-h3: #111;
    --color-article-h4: #222;
    --color-article-a: #111;
    --color-article-p: #666;
    --color-span: #666;
    --bold-text: #222;
    --nav-text: #000000;
    --code: #f2f2f2;
    --block-quote-border: #999;
    --block-quote-text: #222;
    --slider-bg: #dddddd;
    --slider-bg-before: #fff;
    --slider-input-bg: #8758ff;
  }

  [data-theme="dark"] {
    background-color: #0d1117;
    --color-bg: #000;
    --color-text: #dddddd;
    --color-h1: #f2f2f2;
    --color-h2-label: #b4d96f;
    --color-h2: #f2f2f2;
    --color-p: #eee;
    --color-footer-kbd-bg: #0d1117;
    --color-footer-hero: #eee;
    --color-footer-hero-hover: #b4d96f;
    --color-kbd-bg: #eee;
    --color-time: #b4d96f;
    --color-article-h3: #f2f2f2;
    --color-article-h4: #b4d96f;
    --color-article-a: #1aa3c4;
    --color-article-p: #eee;
    --color-footer-p: #b4d96f;
    --color-span: #eee;
    --bold-text: #1d1919;
    --nav-text: #dddddd;
    --code: #f2f2f2;
    --block-quote-border: #8e32dc;
    --block-quote-text: #dddddd;
  }

  @media print {
    .no__print {
      display: none !important;
    }
    .theme-switch-wrapper {
      display: none !important;
    }
  }
  .print {
    display: none !important;
  }

  @media print {
    .print {
      display: block !important;
    }
    .theme-switch-wrapper {
      display: none !important;
    }
  }
</style>
